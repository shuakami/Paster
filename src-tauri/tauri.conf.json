{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:8090/",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "paster",
    "version": "0.1.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.wed0n.paster",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true,
      "menuOnLeftClick": true
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 500,
        "height": 400,
        "minWidth": 400,
        "minHeight": 350,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "alwaysOnTop": true,
        "title": "Paster By: Wed0n",
        "visible": false,
        "hiddenTitle": true,
        "skipTaskbar": false
      }
    ],
    "cli": {
      "description": "Paster 应用",
      "args": [
        {
          "name": "silent",
          "short": "s",
          "description": "启动应用时不显示窗口",
          "takesValue": false
        }
      ]
    }
  }
}